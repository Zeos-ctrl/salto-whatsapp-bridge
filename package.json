{
  "name": "salto-whatsapp-bridge",
  "version": "1.0.0",
  "description": "Bridge to forward Salto Space alarms to WhatsApp",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node src/server.js",
    "build": "cd installer && build-installer.bat"
  },
  "keywords": [
    "salto",
    "whatsapp",
    "webhook",
    "alarm",
    "notification"
  ],
  "author": "Connor Bryan",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "whatsapp-web.js": "^1.23.0",
    "qrcode-terminal": "^0.12.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": "src/server.js",
    "assets": [
      "src/public/**/*",
      "node_modules/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ]
  }
}
